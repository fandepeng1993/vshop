// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

afterbefor()
  -webkit-transform: scaleY(1)
  transform: scaleY(1)
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    .infourtab
      &:after
        -webkit-transform scaleY(0.5)
        transform scaleY(0.5)
    .infourtab
      &:before
        -webkit-transform scaleY(0.5)
        transform scaleY(0.5)
// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
